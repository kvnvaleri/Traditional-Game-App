<html>
    <head>
        <title>Login - Challange 6</title>
        <%- include('./CSS/bootstrap'); %>
        <%- include('./CSS/loginpage'); %>
    </head>
    <body>
        <h1 class="title">Welcome to Traditional Game! Login to get more benefits!</h1>
        <div class="container">
            <form method="post" action="/login">
            <div class="row">
                <div class="col-md-4">
                    <label for="username">Username</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control" placeholder="Username" name="username">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="password">Password</label>
                </div>
                <div class="col-md-8">
                    <input type="password" class="form-control" placeholder="Password" name="password">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12"><input type="submit" value="Log In" class="button-login"></div>
            </div>
            </form>
        </div>
        <div class="homepage">
            <h1 class="home-title">Skip to homepage</h1>
            <a href="http://localhost:3000/home"><button class="button">Home</button></a>
        </div>
        <script src="JS/bootstrap.min.js"></script>
    </body>
</html>

