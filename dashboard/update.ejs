<html>
    <head>Update New User Game</title>
        <link rel="stylesheet" href="css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <form method="post" action="dashboard/update">
            <div class="row">
                <div class="coll-md-4">User Game ID</div>
                <div class="col-md-12">
                    <input type="text" name="user_game_id" value="<%= user_biodata.user_game_id %>">
                </div>
            </div>

            <div class="row">
                <div class="coll-md-4">Name</div>
                <div class="col-md-12">
                    <input type="text" name="name" value="<%= user_biodata.name %>">
                </div>
            </div>

            <div class="row">
                <div class="coll-md-4">Age</div>
                <div class="col-md-12">
                    <input type="text" name="age" value="<%= user_biodata.age %>">
                </div>
            </div>

            <div class="row">
                <div class="coll-md-4">Gender</div>
                <div class="col-md-12">
                    <input type="text" name="gender" value="<%= user_biodata.gender %>">
                </div>
            </div>

            <div class="row">
                <div class="coll-md-4">Address</div>
                <div class="col-md-12">
                    <input type="text" name="address" value="<%= user_biodata.address %>">
                </div>
            </div>

            <div class="row">
                <div class="coll-md-4">Hobby</div>
                <div class="col-md-12">
                    <input type="text" name="hobby" value="<%= user_biodata.hobby %>">
                </div>
            </div>

            <div class="row">
                <div class="coll-md-4">Birthday</div>
                <div class="col-md-12">
                    <input type="text" name="birthday" value="<%= user_biodata.birthday %>">
                </div>
            </div>

            <div class="row">
                <div class="coll-md-4">Birthplace</div>
                <div class="col-md-12">
                    <input type="text" name="birthplace" value="<%= user_biodata.birthplace %>">
                </div>
            </div>

            <div class="row">
                <div class="coll-md-4">Nationality</div>
                <div class="col-md-12">
                    <input type="text" name="nationality" value="<%= user_biodata.nationality %>">
                </div>
            </div>

            <input type="submit" value="Submit">
        </form>
        </div>
    </body>
</html>